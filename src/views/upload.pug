extends base

block content 
    div
        video#preview
        button#actionBtn 녹화하기
    if errorMessage
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video file
        input(type="file", accept="video/*", required, id="video", name="video")
        label(for="thumb") Thumbnail file
        input(type="file", accept="image/*", required, id="thumb", name="thumb")
        input(name="title", type="text", placeholder="Title", required, maxlength=80)
        input(name="description", type="text", placeholder="Description", required, minlength=3)
        input(name="hashtags", type="text", placeholder="Hashtags, separated by comma.", required)
        input(type="submit", value="Upload video")
block scripts
    script(src="/static/js/recorder.js")